<form class="row col-lg-12" action="<%- action %>" method="POST">
	<div class="row">
		<div class="btn-group pull-right" role="group">
		  <a class="btn btn-default" href="javascript:history.go(-1)"><%- __('Back') %>	</a>
		  <input class="btn btn-default" type="submit" />
		</div>
	</div>
	<ul class="nav nav-tabs">
	  <li class="active"><a data-toggle="tab" href="#general"><%- __('General') %></a></li>
	  <li><a data-toggle="tab" href="#values"><%- __('Values') %></a></li>
	</ul>
	<div class="tab-content">
	  <div id="general" class="tab-pane fade in active">
	    	<%- form.fields.title.toHTML() %>
	    	<%- form.fields.code.toHTML() %>
	    	<%- form.fields.type.toHTML() %>
	  </div>
	  <div id="values" class="tab-pane fade">
	  		<div class="btn-group">
			  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			    <%- __('Action') %>
			    <span class="caret"></span>
			  </a>
			  <ul class="dropdown-menu">
			   	<li><a id="attribute-add-value" tabindex="-1" href="#"><%- __('Add value') %></a></li>
			  </ul>
			</div>
		    <div id="attribute-values">&nbsp;</div>
	  </div>
	</div>
</form>
<script>
	var attribute = new AttributeForm();
	
	<% Object.keys(form.fields.values.fields).forEach(function(item, index){ %>
		attribute.addElement(
			"<%= form.fields.values.fields[item].fields.code.value %>", 
			"<%= form.fields.values.fields[item].fields.value.value %>", 
			"<%= index %>"
		);
	<% }); %>
</script>
